{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "target": "es2017",
        "module": "commonjs",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "lib": [
            "es2017",
            "esnext.asynciterable"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.d.ts"
    ]
}